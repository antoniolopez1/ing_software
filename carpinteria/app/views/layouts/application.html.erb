<!DOCTYPE html>
<html>
  <head>
    <title>Carpinteria</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <div>
        <div class='titulo'>Sistema de gestión para una Carpinteria</div>
        <div class="parrafo">
<% if user_signed_in? %>
  Conectado como <strong><%= current_user.email %></strong>.
  <%= link_to 'Editar Perfil', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Iniciar Sesión", new_user_session_path, :class => 'navbar-link'  %>
<% end %>
      </div>

    </header>
    <div class="content">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    </div>
   <aside>
     <ul class="menu">
  <li>
    <a href="#">Personal</a>
    <ul>
      <li>
        <%= link_to 'Lista', employee_index_path %>
      </li>
      <li>
        <%= link_to 'Asistencia', hours_history_index_path %>
      </li>
      <li>
        <%= link_to 'Salario', salary_index_path %>
      </li>
      <li>
        <%= link_to 'Pagos', employee_payment_index_path %>
      </li>
    </ul>
  </li>
  <li>
    <a href="#">Compras</a>
    <ul>
      <li>
        <%= link_to 'Lista', purchase_index_path %>
      </li>
      <li>
        <%= link_to 'Proveedores', provider_index_path %>
      </li>
      <li>
        <%= link_to 'Materiales', material_index_path %>
      </li>
      <li>
        <%= link_to 'Tablones', utility_index_path %>
      </li>

    </ul>
  <li>
  <li>
    <a href="#">Presupuestos</a>
    <ul>
      <li>
        <%= link_to 'Por pedidos', budget_for_orders_path %>
      </li>
      <li>
        <%= link_to 'Muebles', furniture_index_path %>
      </li>
    </ul>
  <li>
  <li>
    <a href="#">Ventas</a>
    <ul>
      <li>
        <%= link_to 'Lista', sale_index_path %>
      </li>
      <li>
        <%= link_to 'Clientes', customer_index_path %>
      </li>
      <li>
        <%= link_to 'Pedidos', order_index_path %>
      </li>
    </ul>
  <li>
    <a href="#">Reportes</a>
    <ul>
      <li>
        <%=link_to('Compras', purchase_index_path(format: :pdf)) %>
      </li>
      <li>
        <%=link_to('Salarios', salary_index_path(format: :pdf)) %>
      </li>
      <li>
        <%=link_to('Ventas', sale_index_path(format: :pdf)) %>
      </li>
    </ul>
  </li>
</ul>

   </aside>
   <div class="artic">
    <%= yield %>
    </div>

  </body>
</html>
