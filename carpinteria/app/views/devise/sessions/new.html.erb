<div class="container-fluid">
<div class="enter">
<div class="row">

<h2 align="center"><%= t('.sign_in', :default => "Sign in") %></h2>
<br>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, class:"form-control" %></div>
<br>
  <div><%= f.label :password %><br />
  <%= f.password_field :password , class: "form-control"%></div>
<br>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<br>
  <div><%= f.submit t('.sign_in', :default => "Sign in"), class:"form-control btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
