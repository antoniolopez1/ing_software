	<h1 align="center">Clientes</h1>
<table class="table ">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Nombres</TH>
		<TH>Apellidos</TH>
		<TH>Dirección</TH>
		<TH>Teléfono</TH>
		<TH colspan="3">Doc-RUC</TH>
		<TH>Observacion</TH>

		<TH colspan="2"><%= link_to 'Nuevo', customer_new_path %></TH></tr>
</thead>
	<tbody>
	<% @customers.each do |f| %>

	<tr><TD><%= f.id %></TD>
		<TD><%= f.name %></TD>
		<TD><%= f.lastname %></TD>
		<TD><%= f.address %></TD>
		<TD><%= f.telephone %></TD>
		<TD colspan="3"><%= f.document %>-<%= f.ruc%></TD>
		<TD><%= f.observation %></TD>


		<TD><%= link_to 'Editar', customer_edit_path(f['id']) %></TD><TD>
<%= link_to 'Borrar', { :action => :destroy, :id => f.id }, :method => :delete, :data => { :confirm => 'Desea borrar el registro?' } %>
		</TD>
	</tr>
    <% end %>
    </tbody>

</table>
