<div class="container-fluid">
<h1 align="center">Clientes</h1>

<div class="boton_redirect">
	<%= link_to 'Ir a Pedidos', order_index_path%> &rarr;
</div><br>
<div class="boton_redirect">
	<%= link_to 'Ir a Ventas', sale_index_path%> &rarr;
</div><br>

	<%=form_tag customer_index_path, :method => 'get', :style => 'padding-left:10em;' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", class: "btn btn-primary" %>
	<%end%>
<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Nombres</TH>
		<TH>Apellidos</TH>
		<TH>Dirección</TH>
		<TH>Teléfono</TH>
		<TH colspan="3">Doc-RUC</TH>
		<TH>Observacion</TH>

		<TH colspan="2"><%= link_to 'Nuevo', customer_new_path , class: "btn btn-link"%></TH></tr>
</thead>
	<tbody>
	<% @customers.each do |f| %>

	<tr><TD><%= f.id %></TD>
		<TD><%= f.name %></TD>
		<TD><%= f.lastname %></TD>
		<TD><%= f.address %></TD>
		<TD><%= f.telephone %></TD>
		<TD colspan="3"><%= f.document %>-<%= f.ruc%></TD>
		<TD><%= f.observation %></TD>


		<TD><%= link_to 'Editar', customer_edit_path(f['id']) , class: "btn btn-link"%></TD><TD>
<%= link_to 'Borrar', { :action => :destroy, :id => f.id }, :method => :delete, :data => { :confirm => 'Desea borrar el registro?' } , class: "btn btn-danger"%>
		</TD>
	</tr>
    <% end %>
    </tbody>

</table>
</div>
