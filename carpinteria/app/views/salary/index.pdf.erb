<body>
<h1>Informe de Salarios</h1>

<p>
	<% @salaries.each do |salary| %>
  <h2>Personal</h2>
  <strong>Nro. de salario</strong>
  <%= salary.id %><br>
	<strong>Apellidos y nombres</strong>
  <%= salary.employee.lastname %>, <%= salary.employee.name %><br>
  <strong>Bonificaci√≥n por hora:</strong>
  <%= salary.charge_for_hours %><br>
  <strong>Acumulado:</strong>
  <%= salary.accumulated %><br>
  <strong>Horas trabajadas:</strong>
  <%= salary.total_hours %><br>
  <strong>Horas extras:</strong>
  <%= salary.total_extra_hours %><br>
</p>
<h2>Pagos de Salarios</h2>
<table class="table">
    <thead>
  <tr>
    <TH>ID</TH>
    <TH>Importe</TH>
    <TH>Saldo</TH>
    <TH>Fecha</TH>
  </tr>
</thead>
  <tbody>
  <% @employee_payments.each do |f| %>

  <tr><TD><%= f.id %></TD>
    <TD><%= f.amount %></TD>
    <TD><%= f.balance %></TD>
    <TD><%= f.created_at.strftime("%Y/%m/%d") %></TD>
  </tr>
    <% end %>
    </tbody>

</table>
 <% end %>