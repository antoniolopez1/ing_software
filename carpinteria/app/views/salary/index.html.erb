		<TD><%= f.charge_for_hours %></TD>
		<TD><%= f.accumulated %></TD>
		<TD><%= f.total_hours%></TD>
		<TD><%= f.total_extra_hours %></TD>

		<TD><%= link_to 'Abonar Salario', employee_payment_add_s_path(f['id']), class:"btn btn-link" %></TD>
