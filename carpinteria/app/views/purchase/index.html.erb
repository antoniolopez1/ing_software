	<%= link_to 'Ir a Proveedores', provider_index_path%> &rarr;
</div><br>
<div class="boton_redirect">
	<%= link_to 'Ir a Materiales', material_index_path%> &rarr;
</div><br>
<div class="boton_redirect">
	<%= link_to 'Ir a Tablones', utility_index_path%> &rarr;
