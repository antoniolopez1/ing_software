<div class="container-fluid">
	<div class="enter">


<div class="boton_redirect">&larr;
	<%= link_to 'Volver a la lista de Compras', purchase_index_path%>
</div><br>
<div class="boton_redirect">&larr;
	<%= link_to 'Volver a la lista de Proveedores', provider_index_path%>
</div><br>

<ul>
<%
@purchase.errors.full_messages.each do |m|
%>
<li> <%= m %></li>
<% end %>
</ul>
<%if params[:provider]==nil%>
<%= f.label "Proveedor" %> </br>
<%= f.collection_select :provider_id, Provider.order(:name), :id, :name %>
<%else  %>
<%= f.label "Proveedor" %> </br>
<%= @provider.name%>
<%= f.hidden_field :provider_id %>
<%end  %>

<p>
<%= f.label "Fecha" %> </br>
<%= f.date_field :purchase_date %>
</p>
<p>
<%= f.label "Importe" %> </br>
<%= f.text_field :amount, class:"form-control" %>
</p>
<p>
<%= f.submit "Enviar" , class:"form-control btn btn-primary"%>
</p>
</div>
</div>
