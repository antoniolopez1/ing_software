<div class="container-fluid">
<h1 align="center">Ventas</h1>
<div class="boton_redirect">
	<%= link_to 'Ir a Clientes', customer_index_path%> &rarr;
</div><br>
<div class="boton_redirect">
	<%= link_to 'Ir a Pedidos', order_index_path%> &rarr;
</div><br>


<table class="table table-hover">
	  <thead class="thead-dark">
	<tr><TH>ID</TH>
		<TH>Cliente</TH>
		<TH>Pedido</TH>
		<TH>Estado</TH>
		<TH>Total</TH>
		<TH>Importe</TH>
		<TH>Saldo</TH>
		<TH colspan="3"><%= link_to 'Nuevo', sale_new_path , class: "btn btn-link" %></TH></tr>
</thead>
	<tbody>
	<% @sales.each do |f| %>

	<tr><TD><%= f.id %></TD>
		<TD><%= f.customer.lastname %>, <%= f.customer.name %> </TD>
		<TD><%= f.order_id %></TD>
		<TD><%= f.status %></TD>
		<TD><%= f.total%></TD>
		<TD><%= f.amount%></TD>
		<TD><%= f.balance %></TD>

		<TD><%= link_to 'Detalles', sale_show_path(f['id']) , class: "btn btn-link" %></TD>
		<TD><%= link_to 'Editar', sale_edit_path(f['id']) , class: "btn btn-link" %></TD><TD>
<%= link_to 'Borrar', { :action => :destroy, :id => f.id }, :method => :delete, :data => { :confirm => 'Desea borrar el registro?' } , class: "btn btn-danger" %>
		</TD>
	</tr>
    <% end %>
    </tbody>

</table>
</div>
